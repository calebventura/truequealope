rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir lectura pública de todas las imágenes (necesario para ver productos y perfiles)
    match /{allPaths=**} {
      allow read: if true;
    }

    // Reglas para imágenes de productos
    // Solo el usuario dueño de la carpeta puede subir/editar/borrar
    match /products/{userId}/{allPaths=**} {
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.contentType.matches('image/.*');
    }

    // Reglas para imágenes de perfil
    // Solo el usuario dueño de la carpeta puede subir/editar/borrar
    match /profile_images/{userId}/{allPaths=**} {
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
