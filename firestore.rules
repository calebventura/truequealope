rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Funciones auxiliares
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Colección: users
    // Perfiles públicos de lectura, pero solo el dueño puede editar su info.
    match /users/{userId} {
      // Lectura pública para mostrar perfil de vendedor a visitantes
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // Colección: products
    // Lectura pública. Escritura solo para usuarios autenticados y dueños del producto.
    match /products/{productId} {
      allow read: if true;

      allow create: if isAuthenticated()
                    && request.resource.data.sellerId == request.auth.uid
                    && request.resource.data.status == 'active';

      allow update: if (
                      isAuthenticated()
                      && resource.data.sellerId == request.auth.uid
                    )
                    ||
                    (
                      // Permitir actualizar viewCount (público)
                      request.resource.data.diff(resource.data).changedKeys().hasOnly(["viewCount"])
                      && (request.resource.data.viewCount is number)
                    );

      allow delete: if isAuthenticated()
                    && resource.data.sellerId == request.auth.uid;

      // Registros de clic en "Contactar" (ej. WhatsApp)
      match /contactLogs/{logId} {
        // Cualquier usuario autenticado puede registrar un clic
        allow create: if isAuthenticated()
                      && request.resource.data.userId == request.auth.uid
                      && request.resource.data.sellerId
                        == get(/databases/$(database)/documents/products/$(productId)).data.sellerId
                      && request.resource.data.channel in ["whatsapp", "instagram", "other"]
                      && request.resource.data.keys()
                        .hasOnly(["userId", "sellerId", "channel", "createdAt"]);

        // El vendedor puede ver métricas; el comprador solo puede leer sus propios logs.
        // Nota: abrimos lectura a cualquier usuario autenticado para evitar denegaciones en collectionGroup con datos incompletos.
        allow read: if isAuthenticated();
      }

      // Ofertas registradas al contactar por Permuta
      match /offers/{offerId} {
        allow create: if isAuthenticated()
                      && request.resource.data.userId == request.auth.uid
                      && request.resource.data.sellerId
                        == get(/databases/$(database)/documents/products/$(productId)).data.sellerId
                      && request.resource.data.productId == productId
                      && request.resource.data.type == "permuta"
                      && request.resource.data.itemOffer is string
                      && request.resource.data.itemOffer.size() > 0
                      && request.resource.data.cashOffer is number
                      && request.resource.data.cashOffer >= 0
                      && request.resource.data.keys()
                        .hasOnly([
                          "userId",
                          "sellerId",
                          "productId",
                          "itemOffer",
                          "cashOffer",
                          "type",
                          "createdAt"
                        ]);

        // Lectura para vendedor o comprador que envió la oferta
        allow read: if isAuthenticated()
                    && (
                      request.auth.uid == resource.data.sellerId
                      || request.auth.uid == resource.data.userId
                    );
      }

      // Visibilizaciones (vista única por viewerId)
      match /views/{viewerId} {
        allow get: if true;
        allow create: if
          request.resource.data.viewerId == viewerId
          && request.resource.data.keys().hasOnly(["viewerId", "createdAt"]);
        allow update, delete: if false;
        allow list, read: if false;
      }
    }

    // Lectura de collection group contactLogs (independiente del padre) para vistas agregadas
    match /{path=**}/contactLogs/{logId} {
      allow read: if isAuthenticated();
    }

    // Colección: userCommunities (membresías)
    match /userCommunities/{membershipId} {
      allow read: if isAuthenticated()
                  && request.auth.uid == resource.data.userId;

      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.keys().hasOnly(["userId", "communityId", "createdAt"]);

      allow delete: if isAuthenticated()
                    && resource.data.userId == request.auth.uid;

      allow update: if false;
    }

    // Colección: orders
    // Solo lectura para comprador o vendedor. Escritura desde backend (Admin SDK).
    match /orders/{orderId} {
      allow read: if (
                    isAuthenticated()
                    && (
                      request.auth.uid == resource.data.buyerId
                      || request.auth.uid == resource.data.sellerId
                    )
                  )
                  || (
                    // Permitir lectura de órdenes completadas para métricas públicas (no requiere auth)
                    resource.data.status == "completed"
                  );
      allow write: if false;
    }

    // Colección: chats
    // Chat interno DESACTIVADO en este MVP (se usa WhatsApp).
    match /chats/{chatId} {
      allow read, write: if false;

      match /messages/{messageId} {
        allow read, write: if false;
      }
    }

    // Colección: categories
    // Solo lectura pública. Escritura restringida (admin).
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if false; // Solo admin vía consola o backend
    }
  }
}
