rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Funciones auxiliares
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Colección: users
    // Perfiles públicos de lectura, pero solo el dueño puede editar su info.
    match /users/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // Colección: products
    // Lectura pública. Escritura solo para usuarios autenticados y dueños del producto.
    match /products/{productId} {
      allow read: if true;
      
      allow create: if isAuthenticated() 
                    && request.resource.data.sellerId == request.auth.uid;
      
      allow update, delete: if isAuthenticated() 
                            && resource.data.sellerId == request.auth.uid;

      // Registros de clic en "Contactar" (ej. WhatsApp)
      match /contactLogs/{logId} {
        // Cualquier usuario autenticado puede registrar un clic
        allow create: if isAuthenticated()
                      && request.resource.data.userId == request.auth.uid
                      && request.resource.data.sellerId == get(/databases/$(database)/documents/products/$(productId)).data.sellerId
                      && request.resource.data.channel in ["whatsapp", "other"]
                      && request.resource.data.keys().hasOnly(["userId", "sellerId", "channel", "createdAt"]);
        // El vendedor puede ver métricas; el comprador solo puede leer sus propios logs
        allow read: if isAuthenticated()
                    && (
                      request.auth.uid == resource.data.userId
                      || request.auth.uid == resource.data.sellerId
                    );
      }
    }

    // Colección: orders
    // Solo lectura para comprador o vendedor. Escritura desde backend (Admin SDK).
    match /orders/{orderId} {
      allow read: if isAuthenticated()
                  && (
                    request.auth.uid == resource.data.buyerId
                    || request.auth.uid == resource.data.sellerId
                  );
      allow write: if false;
    }

    // Colección: chats
    // Solo los participantes pueden leer o escribir en el chat.
    match /chats/{chatId} {
      allow read: if isAuthenticated() && request.auth.uid in resource.data.participants;
      
      allow create: if isAuthenticated() 
                    && request.resource.data.participants.hasAll([request.auth.uid])
                    && request.resource.data.participants.size() == 2;

      // Subcolección: messages
      // Hereda permisos verificando los participantes del documento padre (chat).
      match /messages/{messageId} {
        allow read, write: if isAuthenticated() 
                           && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
    
    // Colección: categories
    // Solo lectura pública. Escritura restringida (admin).
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if false; // Solo admin vía consola o backend
    }
  }
}
